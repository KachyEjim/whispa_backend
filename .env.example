# Application
NODE_ENV=development
PORT=4001
API_PREFIX=api

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/whispa_db?schema=public"

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
BCRYPT_SALT_ROUNDS=10

# Email Configuration (ZeptoMail SMTP)
# Get credentials from: https://www.zoho.com/zeptomail/
ZEPTOMAIL_USER=your-zeptomail-username
ZEPTOMAIL_KEY=your-zeptomail-send-mail-token
ZEPTOMAIL_FROM_EMAIL=noreply@yourdomain.com
ZEPTOMAIL_FROM_NAME=Your App Name
APP_URL=http://localhost:3000
SUPPORT_EMAIL=support@yourdomain.com
